# -----------------------------------------
# CAMINHOS E DIRETÓRIOS
# -----------------------------------------
# NOTA: Estes caminhos são relativos ao diretório raiz do projeto
# O sistema calculará automaticamente os caminhos absolutos

# Diretório base onde as instâncias serão criadas
INSTANCE_BASE_PATH='selfservice/instances'

# Diretório do template
TEMPLATE_PATH='selfservice/template'

# Diretório de dados do sistema
DATA_PATH='selfservice/data'

# -----------------------------------------
# LOGGING
# -----------------------------------------
# Nível de log: debug, info, notice, warning, error, critical, alert, emergency
LOG_LEVEL='warning'

# Arquivo de log principal (relativo ao DATA_PATH)
LOG_FILE='app.log'

# Tamanho máximo do arquivo de log (em bytes) antes de rotacionar
LOG_MAX_SIZE='10485760'

# -----------------------------------------
# SEGURANÇA
# -----------------------------------------
# Tempo de vida da sessão em segundos (padrão: 3600 = 1 hora)
SESSION_LIFETIME='3600'

# Permitir múltiplas instâncias por email? (true/false)
ALLOW_MULTIPLE_INSTANCES='true'

# Tempo de inatividade para limpeza automática (em horas)
CLEANUP_INACTIVE_HOURS='6'

# -----------------------------------------
# RATE LIMITING
# -----------------------------------------
# Número máximo de requisições permitidas
RATE_LIMIT_MAX_REQUESTS='5'

# Janela de tempo para rate limit (em segundos)
RATE_LIMIT_TIME_WINDOW='3600'

# Ativar rate limiting? (true/false)
RATE_LIMIT_ENABLED='true'

# -----------------------------------------
# URL BASE
# -----------------------------------------
# URL base para acesso às instâncias (sem barra no final)
BASE_URL='http://localhost'

# Porta (se diferente da padrão)
# BASE_PORT='8080'

# -----------------------------------------
# EMAIL (Opcional)
# -----------------------------------------
# Ativar notificações por email? (true/false)
EMAIL_ENABLED='false'

# Servidor SMTP
SMTP_HOST='smtp.example.com'
SMTP_PORT='587'
SMTP_USERNAME='noreply@example.com'
SMTP_PASSWORD='sua_senha_aqui'
SMTP_ENCRYPTION='tls'

# Email do remetente
EMAIL_FROM='noreply@example.com'
EMAIL_FROM_NAME='EBI Self-Service'

# -----------------------------------------
# DESENVOLVIMENTO
# -----------------------------------------
# Modo debug (exibe erros detalhados)
DEBUG_MODE='false'

# Ambiente: development, staging, production
APP_ENV='production'

# -----------------------------------------
# BACKUP
# -----------------------------------------
# Número máximo de backups por instância
MAX_BACKUPS='10'

# Criar backup antes de remover instância?
BACKUP_BEFORE_REMOVE='true'

# Diretório de backups
BACKUP_PATH='selfservice/backups'

# -----------------------------------------
# IMPRESSORA
# -----------------------------------------
# Nome da impressora usado nas instâncias (para impressão de pulseiras)
PRINTER_NAME='ZDesigner 105SL'

# Palavra-chave para contador "Comum" (gera variações automáticas)
# Ex: "bonfim" gera automaticamente ["bonfim", "bofim", "bonfin", "bomfim", "bon fim", etc.]
PALAVRA_CONTADOR_COMUM='bonfim'

# Lista de palavras adicionais para contador "Comum" (separadas por vírgula)
# Estas palavras serão verificadas EXATAMENTE como digitadas, sem gerar variações automáticas
# Ex: "parque, parqui, par que, jardim, capela"
LISTA_PALAVRAS_CONTADOR_COMUM='parque, parqui, par que'
