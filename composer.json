{
    "name": "ebi/selfservice",
    "description": "Sistema de Self-Service para criação de instâncias isoladas do EBI (Sistema de Cadastro Infantil)",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "EBI Team"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "monolog/monolog": "^2.9",
        "phpmailer/phpmailer": "^7.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "EBI\\SelfService\\": "selfservice/src/",
            "EBI\\Template\\": "selfservice/template/inc/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EBI\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse selfservice/ --level=5",
        "check": [
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
